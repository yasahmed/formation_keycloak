sudo apt install postgresql

nano /etc/postgresql/12/main/postgresql.conf 
listen_addresses = '*'

nano /etc/postgresql/12/main/pg_hba.conf
host    all             all             0.0.0.0/24               md5

sudo ufw allow 5432/tcp
sudo systemctl restart postgresql.service


sudo -u postgres psql
create database keycloakdb;
create user keycloakuser with encrypted password 'keycloakpass';
grant all privileges on database keycloakdb to keycloakuser;

psql postgresql://keycloakuser:keycloakpass@localhost:5432/keycloakdb


export KEYCLOAK_ADMIN_PASSWORD=admin && export export KEYCLOAK_ADMIN=admin && kc..
