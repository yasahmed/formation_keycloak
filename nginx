apt-get install nginx
nano /etc/nginx/sites-enabled/default

/opt/keycloak/bin/kc.sh start  --proxy="edge"  --hostname-strict=false 

docker run -p 8080:8080  -e KEYCLOAK_ADMIN=admin  -e KEYCLOAK_ADMIN_PASSWORD=password  quay.io/keycloak/keycloak:latest  start  --proxy="edge"  --hostname-strict=false

server {
	listen 80 default_server;
	server_name _;


   location / {
      proxy_pass http://localhost:8080;
      proxy_set_header Host $host;
      proxy_set_header X-Real-IP $remote_addr;
   }
}

SSL : 
openssl req -x509 -nodes -days 365 -newkey rsa:2048 -keyout nginx-selfsigned.key -out nginx-selfsigned.crt

                                                                                            /etc/nginx/sites-enabled/default                                                                                                        
server {
        listen 443 ssl;
        server_name nginx.server.com;
       ssl_certificate /etc/nginx/ssl/nginx-selfsigned.crt;
        ssl_certificate_key /etc/nginx/ssl/nginx-selfsigned.key;
        root /var/www/example.com;
        index index.html;
   location / {
                proxy_pass http://localhost:8080;
                proxy_set_header Host $host;
                proxy_set_header X-Real-IP $remote_addr;


           proxy_set_header X-Forwarded-For $remote_addr;
           proxy_set_header X-Forwarded-Proto $scheme;
           proxy_set_header X-Forwarded-Port 443;
   }
}

