apt-get install nginx
nano /etc/nginx/sites-enabled/default

/opt/keycloak/bin/kc.sh start  --proxy="edge"  --hostname-strict=false 

docker run -p 8080:8080  -e KEYCLOAK_ADMIN=admin  -e KEYCLOAK_ADMIN_PASSWORD=password  quay.io/keycloak/keycloak:latest  start  --proxy="edge"  --hostname-strict=false

server {
	listen 80 default_server;
	server_name _;


   location / {
      proxy_pass http://localhost:8080;
      proxy_set_header Host $host;
      proxy_set_header X-Real-IP $remote_addr;
   }
}

